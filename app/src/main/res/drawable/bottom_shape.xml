    <item>
        <shape>
            <solid android:color="@color/main_color"/>
            <corners android:topRightRadius="15dp"
                android:topLeftRadius="15dp"/>
        </shape>

    </item>
    <item
        android:right="2dp"
        android:left="2dp"
        android:top="4dp"
        >
        <shape>
            <solid android:color="@color/add_color"/>
            <corners android:topRightRadius="15dp"
                android:topLeftRadius="15dp"/>
        </shape>

    </item>

</layer-list>